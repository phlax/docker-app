#!/bin/bash

set -e

if [ ! -z "$APP_INSTALL_PRE" ]; then
     $APP_INSTALL_PRE;
fi


if [ ! -z "$APP_PKGS" ]; then
    apt-get update -qq
    apt-get install \
            -y -qq \
            --no-install-recommends \
            $APP_PKGS
    apt-get clean
    rm -rf /var/lib/apt/lists/* /var/tmp/*
fi
